[Unit]
Description=Redis Service 6379
After=network.target
[Service]
ExecStart=/usr/bin/redis-server /etc/redis/6379/redis.conf --supervised systemd
ExecStop=/bin/redis-cli -h 127.0.0.1 -p 6379 shutdown
Type=notify
User=redis
Group=redis
RuntimeDirectory=/etc/redis/6379
RuntimeDirectoryMode=0755
LimitNOFILE=65535
[Install]
WantedBy=multi-user.target